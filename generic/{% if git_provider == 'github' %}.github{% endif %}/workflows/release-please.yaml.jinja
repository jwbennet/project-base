name: release-please

on:
  push:
    branches:
      - main

permissions:
  contents: write
  pull-requests: write

jobs:
  release-please:
    runs-on: ubuntu-latest
    steps:
      - uses: google-github-actions/release-please-action@v4.1.0
        with:
          token: "{% raw %}${{ secrets.RELEASE_PLEASE_TOKEN }}{% endraw %}"
          release-type: simple
